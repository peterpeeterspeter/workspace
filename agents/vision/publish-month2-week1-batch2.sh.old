#!/bin/bash
# Publish 3 Month 2 Week 1 articles via WordPress REST API

set -e

DRAFT_DIR="/root/.openclaw/workspace/drafts"
LOG_FILE="/tmp/publish-month2-week1-batch2.log"

echo "=== WordPress Publishing: Month 2 Week 1 - Batch 2 ===" | tee -a "$LOG_FILE"
echo "Time: $(date -u '+%Y-%m-%d %H:%M:%S UTC')" | tee -a "$LOG_FILE"
echo "" | tee -a "$LOG_FILE"

# Article 1: Ethereum Crash Gambling → cryptocrashgambling.com
echo "Publishing: Ethereum Crash Gambling to cryptocrashgambling.com..." | tee -a "$LOG_FILE"
python3 /root/.openclaw/workspace/agents/vision/wordpress-publish-single.py \
  --site cryptocrashgambling \
  --file "$DRAFT_DIR/month2-week1-cryptocrashgambling-002-ethereum-crash-gambling.md" \
  --status draft | tee -a "$LOG_FILE"

echo "" | tee -a "$LOG_FILE"

# Article 2: Best Crash Casinos for Brazil → freecrashgames.com
echo "Publishing: Best Crash Casinos for Brazil to freecrashgames.com..." | tee -a "$LOG_FILE"
python3 /root/.openclaw/workspace/agents/vision/wordpress-publish-single.py \
  --site freecrashgames \
  --file "$DRAFT_DIR/month2-week1-freecrashgames-002-best-crash-casinos-brazil.md" \
  --status draft | tee -a "$LOG_FILE"

echo "" | tee -a "$LOG_FILE"

# Article 3: Crash Gambling Bankroll Management → crashgamegambling.com
echo "Publishing: Crash Gambling Bankroll Management to crashgamegambling.com..." | tee -a "$LOG_FILE"
python3 /root/.openclaw/workspace/agents/vision/wordpress-publish-single.py \
  --site crashgamegambling \
  --file "$DRAFT_DIR/month2-week1-crashgamegambling-002-bankroll-management.md" \
  --status draft | tee -a "$LOG_FILE"

echo "" | tee -a "$LOG_FILE"
echo "=== Batch 2 Publishing Complete ===" | tee -a "$LOG_FILE"
